
<div class="post-content-wrap row">
  <div class="col-sm-7">
  <%= image_tag @post.image %>
  </div>
  <div class="col-sm-5">
    <h2><%= @post.body %></h2>
    <p>By <%= @post_owner.username %></p>
    <hr />
    <h2>Comments</h2>
  <% @post.comments.reverse.each do |comment| %>
    <p><%= comment.user.username %>: <%= comment.body %></p>
  <% end %>

    <h4>Add a comment:</h4>
    <%= form_with model: [ @post, @post.comments.build ], local: true do |form| %>
   
      <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
  </div>
</div>
