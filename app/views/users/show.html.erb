<div class="profile-header">
  <div class="row">
    <div class="col-sm-8">
      <h1><%= @user.username %></h1>
      <p>Posts <strong><%=@user.posts.count %></strong></p>
    </div>
    <div class="col-sm-4 text-right-sm">
      <% if @user.id == current_user.id %>       
        <a href="/users/<%=@user.id %>/posts/new" class="btn btn-primary">Create post</a>
      <% end %>
    </div>
  </div>

</div>
<div class="posts-wrap row">
  <% @user.posts.each do |post| %>
    <div class="col-sm-4">
      <div class="post">
        <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
          <%= image_tag  post.image =%>
          <div>
            <p><%= post.body %></p>
          </div>
        </a>
      </div>
    </div>
  <% end %>
</div>


